<script>
    function OldPasswordClick() {
        var i = document.getElementById("OldPassword");
        var e = document.getElementById("OldPasswordEye");

        if (i.type == "text") {
            i.type = "password";
            e.src = "/Open eye 2.png";
        }
        else {
            i.type = "text";
            e.src = "/Closed eye.png";
        }
    }

    function NewPasswordClick() {
        var i = document.getElementById("NewPassword");
        var e = document.getElementById("NewPasswordEye");

        if (i.type == "text") {
            i.type = "password";
            e.src = "/Open eye 2.png";
        }
        else {
            i.type = "text";
            e.src = "/Closed eye.png";
        }
    }

