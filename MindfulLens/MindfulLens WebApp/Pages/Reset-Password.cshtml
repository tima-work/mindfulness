@page
@model MindfulLens_WebApp.Pages.Reset_PasswordModel
@{
    Layout = "~/Pages/Shared/_NoSidebarLayout.cshtml";
    ViewData["Title"] = "Reset password";
}

<div class="tab-label">Reset password</div>


<div class="login-container" style="top: 50%; transform:translate(-50%, -50%);">
    <div class="login-label">Old password</div>
    <div class="password-box">
        <input type="password" class="login-input" id="OldPassword" placeholder="Enter old password" />
        <div class="show-password"><img src="~/Open eye 2.png" height="35px" id="OldPasswordEye" onclick="OldPasswordClick()" /></div>
    </div>
    <div class="login-error-label"></div>



    <div class="login-label">New password</div>
    <div class="password-box">
        <input type="password" class="login-input" id="NewPassword" placeholder="Enter new password" />
        <div class="show-password"><img src="~/Open eye 2.png" height="35px" id="NewPasswordEye" onclick="NewPasswordClick()" /></div>
    </div>
    <div class="login-error-label"></div>



